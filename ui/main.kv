#:kivy 2.3.0
ScreenManager:
    SplashScreen:
    MenuScreen:
    GameScreen:
<SplashScreen>:
    name:'splash'
    MDBoxLayout: 
        md_bg_color:app.theme_cls.primary_color
        MDLabel: text:'BRAIN GAMES'; halign:'center'; font_style:'H3'; text_color:(1,1,1,1); theme_text_color:'Custom'
<MenuScreen>:
    name:'menu'
    MDBoxLayout: 
        orientation:'vertical'
        MDTopAppBar: title:'Main Menu'
        MDBoxLayout: 
            padding:'20dp'; spacing:'20dp'; orientation:'vertical'
            MDRaisedButton: text:'Queens Puzzle'; size_hint:(1,None); on_release:app.setup_game('Queens')
            MDRaisedButton: text:'Tango Puzzle'; size_hint:(1,None); on_release:app.setup_game('Tango')
            MDRaisedButton: text:'Zip Puzzle'; size_hint:(1,None); on_release:app.setup_game('Zip')
<GameScreen>:
    name:'game'
    MDBoxLayout: 
        orientation:'vertical'
        MDTopAppBar: id:gt; title:'Game'; left_action_items:[['arrow-left',lambda x:app.switch_screen('menu')]]
        MDGridLayout: id:grid_layout; padding:'10dp'; spacing:'5dp'
        MDRaisedButton: text:'Check Result'; size_hint:(1,None); on_release:app.validate_current_game()